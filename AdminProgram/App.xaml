<Application x:Class="AdminProgram.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:AdminProgram"
             xmlns:converters="clr-namespace:AdminProgram.Converters"
             StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="LightViolet">#EAD3FD</SolidColorBrush>
        <SolidColorBrush x:Key="MediumViolet">#D4A3FF</SolidColorBrush>
        <SolidColorBrush x:Key="LightDimViolet">#5B4171</SolidColorBrush>
        <SolidColorBrush x:Key="DimViolet">#493659</SolidColorBrush>
        <SolidColorBrush x:Key="GrayViolet">#6A5A77</SolidColorBrush>
        <!-- Converters -->
        <converters:EllipseColorConverter x:Key="EllipseColor" />
        <converters:StatusTextConverter x:Key="StatusText" />
        <converters:PowerOnButtonTextConverter x:Key="PowerOnButtonText" />
        <converters:ScanButtonTextConverter x:Key="ScanButtonText" />
        <converters:RefreshButtonTextConverter x:Key="RefreshButtonText" />
        <!-- Main -->
        <Style x:Key="Font">
            <Setter Property="Control.FontSize" Value="20" />
            <Setter Property="Control.FontStyle" Value="Normal" />
            <Setter Property="Control.FontFamily" Value="Arial, Sans-serif" />
            <Setter Property="Control.FontStretch" Value="Normal" />
        </Style>
        <Style x:Key="Window" BasedOn="{StaticResource Font}">
            <Setter Property="Control.Background" Value="{StaticResource DimViolet}" />
            <Setter Property="Control.Foreground" Value="White" />
        </Style>
        <Style x:Key="HostPanel" BasedOn="{StaticResource Window}">
            <Setter Property="TextBlock.Margin" Value="10" />
        </Style>
        <Style TargetType="Ellipse">
            <Setter Property="Width" Value="12" />
            <Setter Property="Height" Value="12" />
            <Setter Property="Fill" Value="Gray" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="StrokeThickness" Value="2" />
            <Setter Property="Stroke" Value="Gray" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
        </Style>
        <Style x:Key="RightPanel" BasedOn="{StaticResource Window}">
            <Setter Property="StackPanel.Background" Value="{StaticResource GrayViolet}" />
            <Setter Property="StackPanel.Margin" Value="10" />
            <Setter Property="StackPanel.Visibility" Value="Collapsed" />
        </Style>
        <!-- Texts -->
        <Style x:Key="TextBox" BasedOn="{StaticResource Font}">
            <Setter Property="TextBox.Background" Value="{StaticResource LightDimViolet}" />
            <Setter Property="TextBox.Foreground" Value="White" />
            <Setter Property="TextBox.Padding" Value="5" />
            <Setter Property="TextBox.Margin" Value="5" />
            <Setter Property="TextBox.BorderThickness" Value="0" />
            <Setter Property="TextBox.HorizontalAlignment" Value="Left" />
            <Setter Property="TextBox.VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="SearchBox" BasedOn="{StaticResource TextBox}">
            <Setter Property="TextBox.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="TextBox.VerticalScrollBarVisibility" Value="Disabled" />
            <Setter Property="TextBox.MaxLength" Value="50" />
            <Setter Property="TextBox.Width" Value="600" />
            <Setter Property="TextBox.Margin" Value="10" />
        </Style>
        <Style x:Key="SearchEmpty" BasedOn="{StaticResource Font}">
            <Setter Property="Label.Foreground" Value="{StaticResource MediumViolet}" />
            <Setter Property="Label.FontStyle" Value="Italic" />
            <Setter Property="Label.Content" Value="Поиск..." />
            <Setter Property="Control.Padding" Value="5" />
            <Setter Property="Control.Margin" Value="15" />
            <Setter Property="TextBox.HorizontalAlignment" Value="Left" />
            <Setter Property="TextBox.VerticalAlignment" Value="Center" />
        </Style>
        <!-- Buttons -->
        <Style TargetType="Button" BasedOn="{StaticResource Window}">
            <Setter Property="Background" Value="{StaticResource GrayViolet}" />
            <Setter Property="Margin" Value="10" />
        </Style>
    </Application.Resources>
</Application>
